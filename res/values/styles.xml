<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="actionButtonStyle">@style/AppTheme.ActionButton</item>
    </style>

    <style name="AppBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionButtonStyle">@style/AppTheme.ActionButton</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>

        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Section header -->
    <style name="AppTheme.SubHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Header" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">8dp</item>

        <item name="android:gravity">center_horizontal</item>

        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Settings appearance -->
    <style name="AppTheme.Settings.ItemLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/item_bottom_line</item>
    </style>

    <style name="AppTheme.Settings.Icon" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>

        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppTheme.Settings.Name" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Settings.Value" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">16sp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- Test case item appearance -->
    <style name="TextAppearance.AppTheme.TestCaseItem.Title" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.TestCaseItem.Details" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.TestCaseDialog.ItemName" parent="">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
