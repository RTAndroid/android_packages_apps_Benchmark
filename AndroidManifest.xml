<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="rtandroid.benchmark"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.USE_RT_CPU_LOCK"/>
    <uses-permission android:name="android.permission.USE_RT_PRIORITY"/>

    <application
        android:theme="@style/AppTheme"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:supportsRtl="false" >

        <uses-library android:name="rtandroid.sdk" />
        <meta-data android:name="realtime-flag" android:value="true" />

        <activity
            android:configChanges="keyboardHidden"
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.BenchmarkService"
            android:enabled="true"
            android:process=":BenchmarkService" />

    </application>

</manifest>