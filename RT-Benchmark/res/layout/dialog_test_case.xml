<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:minHeight="60dp"
            style="@style/inputItem">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text="Name"/>

            <EditText
                android:id="@+id/input_name"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:minHeight="60dp"
            style="@style/inputItem">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text="Priority"/>

            <SeekBar
                android:id="@+id/input_priority"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/txt_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>

        </TableRow>

        <TableRow
            android:minHeight="60dp"
            style="@style/inputItem">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text="Power Level"/>

            <SeekBar
                android:id="@+id/input_power_level"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_power_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>

        </TableRow>

        <TableRow
            android:minHeight="60dp"
            style="@style/inputItem">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:text="Cpu Core Lock"/>

            <Spinner
                android:id="@+id/input_cpu_core"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>

</LinearLayout>