<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rtandroid.benchmark.ui.BenchmarkFragment">

    <!-- Run settings as header, button as footer -->
    <rtandroid.benchmark.ui.views.ExtendedListView
        android:id="@+id/test_case_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:header="@layout/benchmark_settings"
        app:header2="@layout/benchmark_test_cases_header"
        android:headerDividersEnabled="false"
        app:footer="@layout/benchmark_test_cases_footer"
        android:footerDividersEnabled="false"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/start_benchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:src="@drawable/ic_start" />

</android.support.design.widget.CoordinatorLayout>
